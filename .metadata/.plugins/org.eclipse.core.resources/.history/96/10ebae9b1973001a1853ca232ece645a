package animal;

interface Animal {
	void run();

	void sound();

	class Dog implements Animal {

		@Override
		public void run() {
			System.out.println("강아지 달린다.");
		}

		@Override
		public void sound() {
			System.out.println("멍멍");
		}
	}

	class Bird {
		void run() {
			System.out.println("새 난다.");
		}

		void sound() {
			System.out.println("짹짹");
	
		}

		void fly() {

		}
	}

	
	public class AnimalEx02 {

		static void start(Dog dog) {
			dog.run();
			dog.sound();
			if (dog instanceof Bird) {
				// fly 메소드를 가진 놈이라는 걸 확신
			((Bird) dog).fly();	
			}
		}
		
	public static void main(String[] args) {
		start(new Dog());
		start(new Bird());
		
			
			
	
	}
	
