package dataex;

import java.util.Calendar;

public class CalendarEx {

	public static void printCalendar(String msg, Calendar cal) {
		int year = cal.get(Calendar.YEAR); // 2020
		int month = cal.get(Calendar.MONTH) + 1; // 04
		int date = cal.get(Calendar.DATE);
		int dayOfMonth = cal.get(Calendar.DAY_OF_MONTH);
		int dayOfWeek = cal.get(Calendar.DAY_OF_WEEK);
		System.out.println("day month : " + dayOfMonth);
		System.out.println("day week : " + dayOfWeek);

	}

	public static void main(String[] args) {
		Calendar now = Calendar.getInstance(); // ½Ì±ÛÅæ
		printCalendar("ÇöÀç", now);
	}

}
