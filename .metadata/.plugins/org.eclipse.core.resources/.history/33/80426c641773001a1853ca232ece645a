package animal;

interface Animal {
	void run();

	void sound();

	class Dog implements Animal {

		@Override
		public void run() {

		}

		@Override
		public void sound() {

		}
	}

	class Bird {
		void run() {

		}

		void sound() {
			System.out.println();
		}

		void fly() {

		}
	}

	
	public class AnimalEx02 {

		static void start(Animal a) {
			a.run();
			a.sound();
			if (a instanceof Bird) {
				// fly 메소드를 가진 놈이라는 걸 확신
			((Bird) a).fly();	
			}
		}
		
	public static void main(String[] args) {
		start(new Dog());
		start(new Bird());
		
			
			
	
	}
	
